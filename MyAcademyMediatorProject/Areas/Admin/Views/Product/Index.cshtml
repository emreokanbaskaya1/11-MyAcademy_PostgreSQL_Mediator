@model List<GetProductsQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<table class="table table-hover">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Price TL</td>
            <td>@item.Stock</td>
            <td>@item.Category.Name</td>
            <td>
                <a href="/Admin/Product/DeleteProduct/@item.Id" class="btn btn-danger">Delete</a>
                <a href="/Admin/Product/UpdateProduct/@item.Id" class="btn btn-info">Update</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Product/CreateProduct" class="btn btn-primary">Create New Product</a>

